conky.config = {
-------Conky Process Configuration-----
	background = true,
	update_interval = 1.0,
	total_run_times = 0,
	cpu_avg_samples = 2,
	diskio_avg_samples = 2,
	net_avg_samples = 2,
-------Font Configuration-----
	use_xft = true,
	font = 'Sans:size=8',
	xftalpha = 1,
-------Window Configuration-----
	own_window = true,
	own_window_transparent = false,
	own_window_colour = '#1E282C',
	own_window_type = 'override',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	minimum_width = 250, minimum_height = 250,
	maximum_width = 250,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	default_color = 'gray',
	default_shade_color = 'black',
	default_outline_color = 'white',
	alignment = 'top_right',
	gap_x = 12,
	gap_y = 42,
};

conky.text = [[
#-----General System Information-----
${font sans-serif:bold:size=8}SYSTEM ${hr 2}
${font sans-serif:normal:size=8}Architecture: ${alignr}${machine}
Kernel: ${alignr}Linux ${kernel}
Distribution: ${alignr} ${execi 6000 lsb_release -d | grep 'Descr'|awk {'print $2 " " $3" " $4"" $5'}}
Host: ${alignr}${nodename}
Uptime: ${alignr}${uptime}
System Temperature: ${alignr}${acpitemp} °C

#-----Power Information-----
${font sans-serif:bold:size=8}POWER ${hr 2}
${font sans-serif:normal:size=8}Battery Status: ${alignr}${battery BAT0}
${battery_bar BAT0}
Will be [dis]charged in: ${alignr}${battery_time BAT0}

#-----Processor Information-----
${font sans-serif:bold:size=8}PROCESSOR ${hr 2}
${font sans-serif:normal:size=8}CPU: ${alignr}${execi 6000 cat /proc/cpuinfo | grep 'model name' | sed -e 's/model name.*: //'| uniq | cut -c 1-27}
CPU Utilization: ${alignr}${cpu cpu0}% ${cpubar 8,120 cpu0}
#If you have less than 2 cores, comment them for less.
Core \#1: ${alignr}${cpu cpu1}% ${cpubar 8,120 cpu1}
Core \#2: ${alignr}${cpu cpu2}% ${cpubar 8,120 cpu2}
Core \#3: ${alignr}${cpu cpu3}% ${cpubar 8,120 cpu3}
Core \#4: ${alignr}${cpu cpu4}% ${cpubar 8,120 cpu4}
Core \#5: ${alignr}${cpu cpu5}% ${cpubar 8,120 cpu5}
Core \#6: ${alignr}${cpu cpu6}% ${cpubar 8,120 cpu6}
Core \#7: ${alignr}${cpu cpu7}% ${cpubar 8,120 cpu7}
Core \#8: ${alignr}${cpu cpu8}% ${cpubar 8,120 cpu8}
CPU Frequency: ${alignr} ${freq} MHz
Load Average: ${alignr} ${loadavg}
Total Process Count: ${alignr} ${processes}
Running Process Count: ${alignr} ${running_processes}
Running Thread Count: ${alignr} ${running_threads}

${font sans-serif:bold:size=8}TOP 5 CPU PROCESSES ${hr 2}
${font sans-serif:normal:size=8}${top name 1}${alignr}${top cpu 1} %
${top name 2}${alignr}${top cpu 2} %
$font${top name 3}${alignr}${top cpu 3} %
$font${top name 4}${alignr}${top cpu 4} %
$font${top name 5}${alignr}${top cpu 5} %

#-----Memory Information-----
${font sans-serif:bold:size=8}MEMORY ${hr 2}
${font sans-serif:normal:size=8}RAM Utilization: ${alignr}${memperc}% ${membar 8,120}
Memory in Use: ${alignr}${mem}
Buffered Memory: ${alignr}${buffers}
Cached Memory: ${alignr}${cached}
Free Memory: ${alignr}${memfree}
Total Memory: ${alignr}${memmax}

${font sans-serif:bold:size=8}TOP 5 MEM PROCESSES ${hr 2}
${font sans-serif:normal:size=8}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
$font${top_mem name 3}${alignr}${top mem 3} %
$font${top_mem name 4}${alignr}${top mem 4} %
$font${top_mem name 5}${alignr}${top mem 5} %

#-----Graphics Information-----
${font sans-serif:bold:size=8}GRAPHICS ${hr 2}
${font sans-serif:normal:size=8}GPU: ${alignr}${execi 6000 nvidia-smi --query-gpu=gpu_name --format=csv,noheader,nounits}
Driver: ${alignr}${execi 6000 nvidia-smi --query-gpu=driver_version --format=csv,noheader,nounits}
GPU Utilization: ${alignr}${exec nvidia-smi -i 0 | grep % | cut -c 61-63} %
VRAM Utilization: ${alignr}${exec nvidia-smi -i 0| grep % | cut -c 37-40} MB
GPU Temperature: ${alignr}${nvidia temp}°C

#-----Hard Drive Information-----
${font sans-serif:bold:size=8}STORAGE ${hr 2}
${font sans-serif:normal:size=8}/ $alignr ${fs_used /} / ${fs_size /}
Usage: ${alignr}${fs_used_perc /}% ${fs_bar 8,120 /}
Disk I/O Read: ${alignr}${diskio_read} ${diskiograph_read 8,120}
Disk I/O Write: ${alignr}${diskio_write} ${diskiograph_write 8,120}

#-----Network Information-----
${font sans-serif:bold:size=8}NETWORK ${hr 2}
#-----Detect WLAN Connectivity-----
${if_existing /proc/net/route wlo1}${font sans-serif:normal:size=8}Connection: $alignr WLAN
IP address: $alignr ${addr wlo1}
ESSID: $alignr ${wireless_essid wlo1}
AP's MAC Address: ${alignr}${wireless_ap wlo1}
Wireless Bitrate: ${alignr}${wireless_bitrate wlo1}
Signal Quality: ${alignr}${wireless_link_qual wlo1}% ${wireless_link_bar 8,120 wlo1}
UL Speed: ${alignr}${upspeed wlo1}/s ${upspeedgraph wlo1 8,120}
DL Speed: ${alignr}${downspeed wlo1}/s ${downspeedgraph wlo1 8,120}
Total Upload: ${alignr}${totalup wlo1}
Total Download: ${alignr}${totaldown wlo1}${endif}

#-----Detect Ethernet Connectivity-----
#Ethernet device: enp3s0 change with yours
#Wireless device: wlo1 change with yours
${if_existing /proc/net/route enp3s0}${font sans-serif:normal:size=8}Connection: $alignr Ethernet
IP address: $alignr ${addr enp3s0}
UL Speed: ${alignr}${upspeedgraph enp3s0 8,120} ${upspeed enp3s0}/s
DL Speed: ${alignr}${downspeedgraph enp3s0 8,120}${downspeed enp3s0}/s
Total Upload: ${alignr}${totalup enp3s0}
Total Download: ${alignr}${totaldown enp3s0}${endif}
#-----End of the script. Written by hyperpostulate.-----
]];
